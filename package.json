    }
  },
  "lint-staged": {
    "*.{js,ts}": "npm run lint"
  },
  "dependencies": {
    "@babel/runtime": "^7.16.5",
    "commander": "^8.2.0",
    "ts-essentials": "^8.1.0",
    "ts-morph": "^12.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.18.3",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.17.2",
    "husky": "~4.2.1",
    "jest": "^27.4.5",
    "lint-staged": "^10.0.7",
    "prettier": "^2.5.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^10.2.1",
    "typescript": "~4.1.2"
  },
  "wallaby": {
    "autoDetect": true
  }
}
